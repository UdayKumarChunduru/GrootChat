<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FingerprintActivity">

    <TextView
        android:id="@+id/BiometricHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fingerprint Authentication"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:padding="25dp"
        android:textSize="25sp"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/Biometric"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:src="@drawable/fingerprint"
        android:layout_below="@+id/BiometricHeading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Your Finger"
        android:layout_below="@+id/Biometric"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:textSize="25sp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/ParaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock GrootChat"
        android:layout_below="@+id/Label"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:textSize="25sp"
        android:textStyle="normal"/>


</RelativeLayout>